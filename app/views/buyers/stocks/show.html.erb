<div class='container mx-auto'>
    <p class="text-xs text-gray-500 my-8">BROKER: <%= @stock.broker.email %></p>
    <div class='mx-auto max-w-md mt-10 border shadow rounded px-10 py-6'>
        <h3 class="text-xl font-semibold text-center text-gray-700"><%= @stock.symbol %></h3>
        <p class="text-xs text-gray-500 text-center text-gray-700 "><%= @stock.company_name %></p>
        <img src="<%= @stock_logo['url'] %>" class='h-20 20 object-contain mx-auto mb-10 mt-4' />
        <h3 class="relative text-4xl mb-4 text-center mb-20"><%= number_to_currency(@stock.latest_price) %>
            <span class="absolute bottom-0 text-sm text-right font-semibold px-3 <%= @stock.change >= 0 ? 'text-green-500' : 'text-red-500' %>">
                <i class="fas fa-long-arrow-alt-<%= @stock.change >= 0 ? 'up' : 'down' %> px-1"></i>
                <%= @stock.change %>
            </span>
        </h3>
        <div class="text-center">
            <%= form_with url: buy_stock_path, local: true, method: :post do |form| %>
                <div class="flex">
                    <%= form.number_field :quantity, required: true, in: 1..100, placeholder: "Enter quantity", class: "w-48 px-6 py-2 border rounded-l-lg focus:outnline-none" %>
                    <%= form.submit "BUY", class: "px-6 py-2 shadow flex-grow bg-green-700 font-semibold cursor-pointer text-white rounded-r-lg " %>
                </div>
            <% end %>
        </div>
    </div>
</div>