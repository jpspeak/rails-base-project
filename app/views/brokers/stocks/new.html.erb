<div class='container mx-auto'>
    <div class='flex space-x-4 divide-x'>
        <div class='w-full px-3 py-2'>
            <table class='w-full'>
                <thead>
                    <tr class='text-gray-700 text-sm '>
                        <th class='text-left pr-4 font-normal'>SYMBOL</th>
                        <th class='text-left font-normal'>COMPANY NAME</th>
                        <th class='text-center font-normal'>LATEST PRICE</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td colspan='3' class='text-center font-semibold py-4'>Most active</td>
                    </tr>
                    <% @mostactive.each do |v|%>
                        <tr >
                            <td class='text-left py-2'><%= v['symbol'] %></td>
                            <td class='text-left'><%= v['company_name'] %></td>
                            <td class='text-center'><%= number_to_currency(v['latest_price']) %></td>                    
                        </tr>
                    <% end %>
                    <tr>
                        <td colspan='3' class='text-center font-semibold py-4'>Gainers</td>
                    </tr>
                    <% @gainers.each do |v|%>
                        <tr  >
                            <td class='text-left py-2'><%= v['symbol'] %></td>
                            <td class='text-left'><%= v['company_name'] %></td>
                            <td class='text-center'><%= number_to_currency(v['latest_price']) %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        <div class='max-w-2xl w-full px-3 py-2'>
            <h3 class='text-2xl font-semibold mb-8'>ADD STOCK TO YOUR PORTFOLIO</h3>
            <div class='mb-8 '>
                <%= form_with url: stocks_search_path, id: 'search', method: :get do |form| %>
                    <%= form.label :symbol, 'Search for a symbol:' %><br/>
                    <div class='flex w-full space-x-1'>
                        <%= form.text_field :symbol, required: true, placeholder: 'e.g., TSLA', class: 'px-3 py-1 shadow rounded-lg border flex-grow' %>
                        <%= form.submit 'Search', data: { disable_with: 'Searching...' }, class: 'border px-3 py-1 shadow rounded-lg cursor-pointer'%>
                    </div>
                <% end %>
            </div>
            <div id="cards_container"></div>
        </div>
    </div>
</div>