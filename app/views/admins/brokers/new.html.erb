<div class='container mx-auto'>
    <div class='max-w-md mx-auto border rounded-lg px-4 pb-4 mt-8'>
        <h3 class="text-lg font-semibold py-4">Create Broker Account</h3>
        <% if @broker.errors.any? %>
            <div class='border rounded bg-red-100 text-red-500 border-red-500 p-2 mb-4'>
                <ul class='list-inside list-disc'>
                    <% @broker.errors.full_messages.each do |error_message| %>
                        <li><%= error_message %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
        <%= form_with url: admin_brokers_path, local: true do |form| %>
            <%= form.label :email, "Email address" %>
            <%= form.email_field :email, class: "px-3 py-1 border rounded-lg w-full mb-2" %>
            <%= form.label :password, "Password (6 character minimum)" %>
            <%= form.password_field :password, class: "px-3 py-1 border rounded-lg w-full mb-2" %>
            <%= form.label :password_confirmation, "Password confirmation" %>
            <%= form.password_field :password_confirmation, class: "px-3 py-1 border rounded-lg w-full mb-8" %>
            <%= form.submit "Create",  data: {disable_with: "Creating..." }, class: "px-3 py-1 border shadow rounded-lg w-full cursor-pointer" %>
        <% end %>
    </div>
</div>