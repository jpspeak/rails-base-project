<div class='container mx-auto'>
    <div class='max-w-md mx-auto border rounded-lg px-4 pb-4 mt-8'>
        <h3 class="text-lg font-semibold py-4">Edit Broker Account</h3>
        <% if @broker.errors.any? %>
            <div class='border rounded bg-red-100 text-red-500 border-red-500 p-2 mb-4'>
                <ul class='list-inside list-disc'>
                    <% @broker.errors.full_messages.each do |error_message| %>
                        <li><%= error_message %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
        <%= form_with(model: @broker, url: admin_broker_path, local: true) do |form| %>
            <%= form.label :email, "Email address" %>
            <%= form.email_field :email, class: "px-3 py-1 border rounded-lg w-full mb-8" %>
            <%= form.submit "Update", class: "px-3 py-1 border shadow rounded-lg w-full cursor-pointer" %>
        <% end %>
    </div>
</div>